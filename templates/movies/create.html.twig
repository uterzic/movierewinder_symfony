{% extends "./base.html.twig" %}

{% block body %}
<div class="w-4/5 m-auto text-center">
    <h1 class="text-6xl text-center p-8">
        Write review
    </h1>

    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.releaseYear) }}
        {{ form_row(form.rating) }}
        {{ form_row(form.description) }}
        {{ form_row(form.imagePath) }}

        <button    
            type="submit"
            class="mt-8 uppercase bg-cyan-800 text-gray-100 text-lg font-extrabold py-4 px-8 rounded-3xl">
            Submit review
        </button>

    {{ form_end(form) }}
</div>
{% endblock %}